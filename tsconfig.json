{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es6",
        "module": "es2015",
        "sourceMap": true,
        "watch": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "declaration": true,
        "declarationDir": "es/types",
        "outDir": "es",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "spui",
        "tests",
        "examples"
    ]
}